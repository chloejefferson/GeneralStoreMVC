@model IEnumerable<GeneralStoreMVC.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p>
    Our General Store, located in rural Indiana, is host to a multitude of fine food and items of distinction.<br />
    Come browse our products and see what we have for you. <br />
    @Html.ActionLink("Learn More About Us", "About", "Home")
    <br />
    @Html.ActionLink("Add a New Product", "Create")
    <!--(ATSYMBOL)Html.ActionLink("Check Products", "Index", "Product", null, new { (ATSYMBOL)class = "btn btn-primary btn-large" })
    </p>-->

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFood)
            </th>
            <th></th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(r => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(r => product.Price)
                </td>
                <td>
                    @Html.DisplayFor(r => product.InventoryCount)
                </td>
                <td>
                    @Html.DisplayFor(r => product.IsFood)
                </td>
                <td>
                    @Html.ActionLink("Change", "Edit", new { id = product.ProductId }) |
                    @Html.ActionLink("More Info", "Details", new { id = product.ProductId }) |
                    @Html.ActionLink("Remove", "Delete", new { id = product.ProductId })
                </td>
            </tr>
        }
    </table>
